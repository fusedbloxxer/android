<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_list_1"
    android:orientation="vertical"
    tools:context=".week_7.challenge_extras.CodeExamples">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_32"
        tools:context=".week_7.challenge_extras.CodeExamples">

        <Button
            android:id="@+id/button_date_picker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/space_8"
            android:onClick="openDatePickerOnClick"
            android:text="@string/datepicker" />

        <Button
            android:id="@+id/button_time_picker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/space_8"
            android:onClick="openTimePickerOnClick"
            android:text="@string/timepicker" />

        <Button
            android:id="@+id/button_alert_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/space_8"
            android:onClick="openAlertDialogOnClick"
            android:text="AlertDialog" />

        <Button
            android:id="@+id/button_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/space_8"
            android:onClick="showAnimationOnClick"
            android:text="Start Animation" />


    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_shape_and_stroke_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_32"
        android:background="@drawable/animation_shape_and_stroke"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/space_16"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openMapsOnClick"
        android:src="@drawable/ic_location_on_black_24dp"
        app:fabSize="normal" />
</LinearLayout>