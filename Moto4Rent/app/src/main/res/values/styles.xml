<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="PrimaryAppTheme.Base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/PrimaryToolbarStyle</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <style name="PrimaryAppTheme.ActionBar" parent="PrimaryAppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@null</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <!-- Panel attributes -->
        <item name="listChoiceBackgroundIndicator">@drawable/abc_list_selector_holo_dark</item>
    </style>

    <style name="PrimaryAppTheme.NoActionBar" parent="PrimaryAppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Define element styles here -->
    <style name="PrimaryToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Medium</item>
        <item name="buttonStyle">@style/AlertDialogStyle.ButtonStyle</item>
    </style>

    <style name="AlertDialogStyle.ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PrimaryAppTheme.ActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PrimaryAppTheme.ActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PrimaryAppTheme.ActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
